# App
# APP_ENV controls file lookup order:
# 1) .env.<APP_ENV>.local
# 2) .env.<APP_ENV>
# 3) .env
APP_ENV=dev

# Server
API_PORT=8080
GIN_MODE=debug
WORKER_CONCURRENCY=5

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=policyfit
DB_PASSWORD=policyfit123
DB_NAME=policyfit
DB_SSLMODE=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Storage
# STORAGE_TYPE: local or s3
STORAGE_TYPE=local
STORAGE_PATH=./storage
S3_ENDPOINT=
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# LLM
# LLM_PROVIDER: openai / anthropic / ...
LLM_PROVIDER=openai
LLM_API_KEY=your-api-key-here
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4o
LLM_TIMEOUT=120

# Parser
# PDF_PARSER: pdftotext or python-service
PDF_PARSER=pdftotext
PYTHON_SERVICE_URL=http://localhost:8081

# Security
JWT_SECRET=replace-with-long-random-secret
DATA_RETENTION_DAYS=30
# Comma-separated admin user ids for /api/v1/admin/* and analytics dashboards.
# Empty means no explicit admin whitelist in non-production environments.
ADMIN_USER_IDS=

# Logging
# LOG_LEVEL: debug, info, warn, error
# LOG_FORMAT: json, console
LOG_LEVEL=info
LOG_FORMAT=json
